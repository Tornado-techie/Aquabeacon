# AquaBeacon Server Environment Variables
# Copy this file to .env and replace with your actual values
# ⚠️  WARNING: Never commit the actual .env file to version control!
# ⚠️  The values below are examples only - replace with real credentials

NODE_ENV=development
PORT=5000

# Database
# ⚠️  Replace with your actual MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@your-cluster.xxxxx.mongodb.net/your-database-name?retryWrites=true&w=majority&appName=YourCluster

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# URLs
FRONTEND_URL=http://localhost:5173

# File Storage (S3/MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=aquabeacon

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@aquabeacon.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AI Service - Multiple Providers (Failover Support)
# At least one API key is required for AI functionality
OPENAI_API_KEY=your_openai_api_key
GROQ_API_KEY=your_groq_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# KEBS Integration
KEBS_API_URL=https://kebs.go.ke/api
KEBS_API_KEY=your_kebs_api_key

# M-Pesa Integration (Daraja API)
# Get these from https://developer.safaricom.co.ke/
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=XXXXXX
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=https://your-domain.com/api/payments/callback

# Admin Registration
# Set a secure code for admin account creation - DO NOT use the example below
ADMIN_REGISTRATION_CODE=your_secure_admin_code_here

# Monitoring & Error Tracking
# Sentry for error tracking and performance monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_RELEASE=aquabeacon@1.0.0
ENABLE_SENTRY=false

# Health Monitoring
LOG_LEVEL=info
SERVER_NAME=aquabeacon-server

# Cron Jobs
ENABLE_CRON_JOBS=true

# Alert Configuration
ALERT_EMAIL=admin@aquabeacon.com
ALERT_PHONE=+1234567890
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK